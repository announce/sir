{
  "name": "sir",
  "description": "[![Build Status](https://travis-ci.org/announce/sir.svg?branch=master)](https://travis-ci.org/announce/sir)",
  "scripts": {
    "start": "npm run fmt && npm run lint && npm run build && npm run test && ./script/notify.bash",
    "watch": "npm-run-all --parallel start watch:*",
    "watch:all": "onchange '*.json' --delay 1000 -- npm start",
    "watch:docker": "onchange 'Dockerfile' '.dockerignore' --delay 10000 -- ./sir build && ./script/notify.bash docker",
    "watch:rust": "onchange 'Cargo.toml' 'src/*' --delay 10000 -- npm run rust-tasks && ./script/notify.bash rust",
    "watch:fmt": "onchange 'src/*' --delay 1000 -- npm run fmt",
    "watch:shell": "onchange 'script/*' --delay 1000 -- ./sir lint-shell",
    "fmt": "./sir cargo fmt --all",
    "lint": "./sir lint",
    "rust-tasks": "./sir lint-rust && npm run build && npm run test",
    "build": "./sir cargo build",
    "test": "./sir cargo test"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0"
  }
}
